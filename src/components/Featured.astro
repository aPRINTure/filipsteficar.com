---
import { seenOn } from "@/data/global";
---
<div class="mx-auto px-fluid-sm container">
	<h3>My Photos Have Appeared On</h3>
	<div class="flex flex-row flex-wrap gap-fluid-sm mt-fluid-sm">
		{seenOn?.sort((a, b) => a.label.localeCompare(b.label)).map(item => (
		<div class="flex flex-col gap-fluid-sm bg-zinc-100 dark:bg-zinc-900 p-fluid-sm border-2 border-zinc-200 hover:border-blue-500 dark:border-zinc-800 transition-all hover:-translate-y-1 duration-500 ease-in-out">
			<p>{item.label}</p>
		</div>
		))}
	</div>
</div>