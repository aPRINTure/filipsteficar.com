---
// Components
import { Image } from 'astro:assets';
// Props
const {
    src,
    srcLightbox,
    alt="Alt Description",
    width,
    height,
    loading="eager",
    views,
    author,
    authorUnsplashLink,
} = Astro.props;
// Lightbox CSS
import "glightbox/dist/css/glightbox.css";
---
<div class="bg-zinc-100 dark:bg-zinc-900 p-fluid-sm glightbox">
    <a  class="glightbox"
        href={srcLightbox}
        data-type="image"
        data-srcset={srcLightbox}
        data-glightbox
        data-gallery="gallery"
    >
        <Image
        class="bg-zinc-50 hover:rounded-b-2xl transition-all hover:-translate-y-fluid-sm duration-500 ease-in-out"
        src={src}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        />
    </a>
    <p class="flex flex-row flex-wrap justify-between gap-fluid-sm mt-fluid-sm font-heading text-fluid-base">Views: {views}
        <a href={`${authorUnsplashLink}?utm_source=filipsteficar.com&utm_medium=referral`} target="_blank" rel="noopener noreferrer">{author} on Unsplash</a>
    </p>
</div>

<script>
    import GLightbox from 'glightbox';
    
    const lightbox = GLightbox({
        selector: '[data-glightbox]',
        touchNavigation: true,
        loop: true
    });
</script>