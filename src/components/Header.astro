---
import { mainMenu } from "@/data/global";
---
<header class="bg-zinc-50 dark:bg-zinc-950 border-zinc-100 dark:border-zinc-900 border-b-2">
    <nav class="flex flex-row flex-wrap justify-between items-center gap-fluid-sm mx-auto p-fluid-sm container">
        <ul class="flex flex-row flex-wrap gap-fluid-sm">
            {mainMenu?.map((item) => (
                <li class="flex flex-row flex-wrap gap-fluid-sm">
                    <a href={item.href || "/"} class="">{item.label || "Unknown"}</a>
                </li>
            ))}
        </ul>

        <button id="theme-toggle" class="flex flex-row items-center gap-fluid-2xs bg-zinc-100 hover:bg-zinc-200 hover:dark:bg-zinc-800 dark:bg-zinc-900 px-fluid-sm py-fluid-2xs rounded-full transition-colors duration-500 ease-in-out">
            <span id="theme-icon">ðŸŒ™</span>
            <span id="theme-text" class="font-decorative">Dark</span>
        </button>
    </nav>
</header>

<script is:inline>
    function updateThemeButton() {
        const icon = document.getElementById('theme-icon');
        const text = document.getElementById('theme-text');
        const isDark = document.documentElement.classList.contains('dark');
        
        if (icon && text) {
            if (isDark) {
                icon.textContent = 'â˜€ï¸';
                text.textContent = 'Light';
            } else {
                icon.textContent = 'ðŸŒ™';
                text.textContent = 'Dark';
            }
        }
    }

    function setupTheme() {
        const toggle = document.getElementById('theme-toggle');
        
        // Set Initial Button State
        updateThemeButton();
        
        if (toggle) {
            toggle.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
                const isDark = document.documentElement.classList.contains('dark');
                localStorage.setItem('theme', isDark ? 'dark' : 'light');
                updateThemeButton();
                console.log('Saved theme:', localStorage.getItem('theme'));
            });
        }
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', setupTheme);
    } else {
        setupTheme();
    }
</script>