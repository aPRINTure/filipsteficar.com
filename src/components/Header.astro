---
import { siteData, mainMenu } from "@/data/global";
---
<header class="bg-neutral-50 dark:bg-neutral-950 border-neutral-100 dark:border-neutral-900 border-b-2">
    <nav class="flex flex-row flex-wrap items-center gap-fluid-sm mx-auto p-fluid-sm container">
        <ul class="flex flex-row flex-wrap gap-fluid-sm">
            {mainMenu?.map((item) => (
                <li class="flex flex-row flex-wrap gap-fluid-sm">
                    <a href={item.href || "/"} class="">{item.label || "Unknown"}</a>
                </li>
            ))}
        </ul>
    </nav>
</header>