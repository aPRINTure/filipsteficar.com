---
// Components
import Layout from "@/layouts/Layout.astro";
// Data
import { siteData, socialMedia } from "@/data/global";
import ContactForm from "@/components/ContactForm.astro";
// Current URL
const currentURL = Astro.url.href;
---
<Layout 
	pageTitle={`${siteData.name} | Contact`}
	pageDescription="Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloremque blanditiis modi architecto ipsum. Distinctio, ipsam quis."
	currentURL={currentURL}
	ogImage="https://images.unsplash.com/photo-1677242178360-6518e2a87194?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
	ogImageAlt="Og Image Description"
	articleAuthor={siteData.author}
>
<section>
	<div class="flex lg:flex-row flex-col justify-center lg:items-center gap-fluid-sm mx-auto mt-fluid-sm px-fluid-sm min-h-screen container">
		<div class="flex flex-col gap-fluid-sm w-full lg:w-1/2">
			<h1 class="leading-none">Let's Connect</h1>
			<p>Have a project in mind or just want to say hi? Fill out the form and I will get back to you promptly. I love collaborating with creatives, businesses, and anyone with an interesting vision.</p>
			<div class="flex flex-row flex-wrap gap-fluid-sm">
				{socialMedia?.map((item) => (
				<a href={item.href || "/"} class="bg-zinc-100 hover:bg-zinc-200 hover:dark:bg-zinc-800 dark:bg-zinc-900 px-fluid-sm py-fluid-2xs rounded-full transition-colors duration-500 ease-in-out" target="_blank" rel="noopener noreferrer">{item.label || "Unknown"}</a>
				))}
			</div>
		</div>
		<div class="mb-fluid-sm w-full lg:w-1/2">
			<ContactForm />
		</div>
	</div>
</section>
</Layout>